<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    body {
        background-color: #f8f9fa;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .custom-container {
        width: 600px; /* Tăng kích thước của form container */
        height: 670px;
        background-color: #ffffff;
        border: 1px solid #e9ecef;
        border-radius: 10px;
        box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
        padding: 20px; /* Tăng khoảng cách giữa nội dung và viền container */
    }

    h1 {
        text-align: center;
        margin-bottom: 20px;
        color: #09b993;
        font-size: 50px;
    }

    .form-group label {
        font-weight: bold;
        font-size: 20px;
    }
    .form-group input {
        width: 100%;
        height: 50px;
    }
    #ho{
        width: 250px;
    }
    .form-group a {
        color: #09b993;
    }
    p {
        padding-top: 10px;
    }

    .form-group a:hover {
        text-decoration: none;
    }

    .btn-danger {
        background-color: #09b993;
        border: 1px solid #09b993;
    }

    .btn-danger:hover {
        background-color: #088b6f;
        border: 1px solid #088b6f;
    }

    /* Đưa trường nhập liệu họ và tên lên cùng hàng */
    .form-row {
        display: flex;
        flex-wrap: wrap;
        margin-bottom: 1rem;
    }

    .form-group {
        flex-basis: 50%;
    }

    .form-group label {
        display: block;
        margin-bottom: 0.5rem;
    }
</style>
<div class="custom-container">
    <form action="/users/luu" method="POST">
        <h1>ĐĂNG KÝ</h1>
        <div class="form-row">
            <div class="form-group">
                <label for="ho">Họ</label>
                <input type="text" class="form-control" name="ho" id="ho" placeholder="Nhập họ của bạn">
            </div>
            <div class="form-group">
                <label for="ten">Tên</label>
                <input type="text" class="form-control" name="ten" id="ten" placeholder="Nhập tên của bạn">
            </div>
        </div>
        <div class="form-group">
            <label for="un">Username</label>
            <input type="text" class="form-control" name="username" id="un" placeholder="Nhập tên đăng nhập">
        </div>
        <div class="form-group">
            <label for="pass">Mật khẩu</label>
            <input type="password" class="form-control" name="password" id="pass" placeholder="Nhập mật khẩu">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" name="email" id="email" placeholder="Nhập email của bạn">
        </div>
        <div class="form-group">
            <label for="st">Sở Thích</label>
            <input type="text" class="form-control" name="sothich" id="st" placeholder="Nhập sở thích của bạn">
        </div>
        <p>Bạn đã có tài khoản? Nhấp <a href="/users/dangnhap">vào đây</a> để đăng nhập</p>
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-danger btn-block">ĐĂNG KÝ</button>
        </div>
    </form>
</div>
