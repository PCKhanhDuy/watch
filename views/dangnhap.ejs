<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    body {
        background-color: #f8f9fa;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .custom-container {
        width: 500px;
        height: 500px;
        background-color: #ffffff;
        border: 1px solid #e9ecef;
        border-radius: 10px;
        box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
        padding: 40px; /* Tăng khoảng cách giữa nội dung và viền container */
    }

    h1 {
        text-align: center;
        margin-bottom: 30px;
        color: #09b993;
        font-size: 50px;
    }

    .form-group label {
        font-weight: bold;
        font-size: 20px;
    }
    .form-group a {
        color: #09b993;
    }

    .form-group a:hover {
        text-decoration: none;
    }
    .form-group input {
        width: 100%;
        height: 50px;
        margin: 10px 0 10px 0;
    }


    .btn-danger {
        background-color: #09b993;
        border: 1px solid #09b993;
    }

    .btn-danger:hover {
        background-color: #088b6f;
        border: 1px solid #088b6f;
    }
</style>
<div class="custom-container">
    <% if (typeof error !== 'undefined' && error !== null) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>
    <form action="/users/dangnhap_" method="POST">
        <h1>ĐĂNG NHẬP</h1>
        <div class="form-group">
            <label for="un">Username</label>
            <input type="text" class="form-control" name="username" id="un" placeholder="Nhập tên đăng nhập">
        </div>
        <div class="form-group">
            <label for="pass">Mật khẩu</label>
            <input type="password" class="form-control" name="password" id="pass" placeholder="Nhập mật khẩu">
        </div>
        <p>Bạn chưa có tài khoản? Nhấp <a href="/users/dangky">vào đây</a> để đăng ký</p>
        <a href="/users/quenmatkhau">Quên Mật Khẩu</a>
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-danger btn-block">ĐĂNG NHẬP</button>
        </div>
    </form>
</div>
